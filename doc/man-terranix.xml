 <refnamediv>
   <refname><command>terranix</command></refname>
   <refpurpose>reconfigure a user environment</refpurpose>
 </refnamediv>

 <refsynopsisdiv>
  <cmdsynopsis>
    <command>terranix</command>
    <arg>
      <group choice="req"> 
        <arg choice="plain">
          -q
        </arg>
        <arg choice="plain">
          --quiet
        </arg>
      </group>
    </arg>
    <arg>
      <group choice="req"> 
        <arg choice="plain">
          --trace
        </arg>
        <arg choice="plain">
          --show-trace
        </arg>
      </group>
    </arg>
    <arg>
      <replaceable>path</replaceable>
    </arg>
    <sbr />
    <arg choice="plain">
      --help
    </arg>
  </cmdsynopsis>
 </refsynopsisdiv>

